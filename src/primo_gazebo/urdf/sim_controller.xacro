<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <gazebo>
    <plugin name="differential_drive_controller" filename="libgazebo_ros_diff_drive.so">
            <robotNamespace>        /                   </robotNamespace>
            <legacyMode>            false               </legacyMode>
            <alwaysOn>              true                </alwaysOn>
            <updateRate>            30                  </updateRate>
            <leftJoint>             left_wheel_joint    </leftJoint>
            <rightJoint>            right_wheel_joint   </rightJoint>
            <wheelSeparation>       0.632               </wheelSeparation>
            <wheelDiameter>         0.2                 </wheelDiameter>
            <wheelTorque>           200                 </wheelTorque>
            <wheelAcceleration>     1                   </wheelAcceleration>
            <commandTopic>          cmd_vel             </commandTopic>
            <odometryTopic>         odom_gazebo         </odometryTopic>
            <odometryFrame>         odom_gazebo         </odometryFrame>
            <odometrySource>        1                   </odometrySource>
            <robotBaseFrame>        base_link           </robotBaseFrame>
            <publishWheelTF>        true                </publishWheelTF>
            <publishWheelJointState>true                </publishWheelJointState>
        </plugin>
    </gazebo>


    <!-- 
         This is so we can have a better sim and test my new odom diff drive 
        publisher. The joint states are properly sent over from gazebo 
    -->
    <gazebo>
        <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
            <robotNamespace>/MYROBOT</robotNamespace>
            <robotSimType>gazebo_ros_control/DefaultRobotHWSim</robotSimType>
        </plugin>
    </gazebo>

</robot>
