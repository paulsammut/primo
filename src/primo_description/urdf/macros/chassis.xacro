<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!-- parameters -->
    <xacro:property name="stereocamSize" value="0.05"/>
    <xacro:property name="stereocamMass" value="0.1"/>

    <!-- Meshes -->
    <xacro:macro name="m_mesh_chassis" params="type">
        <!-- <mesh filename="package://primo_description/meshes/r1_primo_${type}.stl"/> -->
        <mesh filename="package://primo_description/meshes/primo.dae"/>
    </xacro:macro>
    <xacro:macro name="m_mesh_wheel">
        <mesh filename="package://primo_description/meshes/r1_wheel.stl"/>
    </xacro:macro>

    <!-- Main link -->
    <xacro:macro name="m_chassis" params="type">
        <link name="base_link">
            <inertial>
                <mass value=".001"/>
                <origin xyz="0 0 0" rpy=" 0 0 0"/>
                <inertia 
                    ixx="1" ixy="0" ixz="1" 
                    iyy="1" iyz="0" 
                    izz="1"/>
            </inertial>
        </link>

        <joint name="base_joint" type="fixed">
            <axis xyz="0 0 0"/>
            <origin xyz="0.280 0 0" rpy="0 0 0"/>
            <parent link="base_link"/>
            <child link="chassis_link"/>
        </joint>

        <link name="chassis_link">
            <visual>
                <geometry>
                    <xacro:m_mesh_chassis type="${type}"/>
                </geometry>
            </visual>
            <collision name="collision">
                <origin xyz="-.274 0 .4"/>
                <geometry>
                    <box size=".8 .66 .5"/>
                </geometry>
            </collision>
            <inertial>
                <mass value="31.0"/>
                <origin xyz="-.274 0 .4" rpy=" 0 0 0"/>
                <inertia 
                    ixx="11.519" ixy="0" ixz="-3" 
                    iyy="14.163" iyz="0" 
                    izz="5"/>
            </inertial>
        </link>
    </xacro:macro>

    <!-- Wheel link -->
    <xacro:macro name="m_wheel" params="lr reflect">

        <link name="${lr}_wheel">
            <visual>
                <geometry>
                    <xacro:m_mesh_wheel/>
                </geometry>
            </visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <collision name="collision">
                <!-- <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/> -->
                <origin xyz="0 0 0" rpy="1.5707 0 0"/>
                <geometry>
                    <cylinder radius="0.151" length="0.1"/>
                </geometry>
            </collision>
            <inertial>
                <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
                <mass value="2"/>
                <inertia 
                    ixx=".1" ixy="0.0" ixz="0.0" 
                    iyy=".1" iyz="0.0" 
                    izz=".1"/>
            </inertial>
        </link>

        <joint name="${lr}_wheel_joint" type="continuous">
            <parent link="chassis_link"/>
            <child link="${lr}_wheel"/>
            <origin rpy="0 0 0" xyz="0 ${reflect*0.3175} 0.1510"/>
            <axis xyz="0 1 0" rpy="0 0 0"/>
        </joint>

        <!-- Gazebo wheel reference -->
        <gazebo reference="${lr}_wheel">
            <mu1 value="200.0"/>
            <mu2 value="100.0"/>
            <kp value="10000000.0"/>
            <kd value="1.0"/>
            <material>Gazebo/Black</material>
        </gazebo>

    </xacro:macro>

    <!-- Tail Wheel -->
    <xacro:macro name="m_sim_tail">

        <link name="tail_wheel">
            <visual>
                <geometry>
                    <cylinder radius="${0.159/2}" length="0.064"/>
                </geometry>
            </visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <collision name="collision">
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <cylinder radius="${0.159/2}" length="0.064"/>
                </geometry>
            </collision>
            <inertial>
                <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
                <mass value="0.5"/>
                <inertia 
                    ixx=".02" ixy="0.0" ixz="0.0" 
                    iyy=".02" iyz="0.0" 
                    izz=".04"/>
            </inertial>
        </link>

        <joint name="wheel_to_block" type="continuous">
            <parent link="tail_wheel_block"/>
            <child link="tail_wheel"/>
            <origin rpy="1.5707 0 0" xyz="-.05 0 -${0.159/2}"/>
            <axis rpy="0 0 0" xyz="0 0 1"/>
        </joint>

        <link name="tail_wheel_block">
            <visual>
                <geometry>
                    <box size=".1 .1 .1"/>
                </geometry>
            </visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <collision name="collision">
                <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
                <geometry>
                    <box size=".1 .1 .1"/>
                </geometry>
            </collision>
            <inertial>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <mass value="0.5"/>
                <inertia 
                    ixx=".1" ixy="0.0" ixz="0.0" 
                    iyy=".1" iyz="0.0" 
                    izz=".1"/>
            </inertial>
        </link>

        <joint name="wheel_block" type="continuous">
            <parent link="chassis_link"/>
            <child link="tail_wheel_block"/>
            <origin rpy="0 0 0" xyz="-0.730 0 0.150"/>
            <axis xyz="0 0 1" rpy="0 0 0"/>
        </joint>

    </xacro:macro>

</robot>
