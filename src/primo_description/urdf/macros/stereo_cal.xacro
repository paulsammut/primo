<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!-- parameters -->
    <xacro:property name="seecamSize" value="0.05"/>
    <xacro:property name="seecamMass" value="0.1"/>
    <xacro:property name="stereocamSize" value="0.05"/>
    <xacro:property name="stereocamMass" value="0.1"/>

    <!-- stereo1 joint test macro -->
    <xacro:macro name="m_stereo1_cal">
        <link name="stereo1_link">
            <!-- this name is required for the point cloud -->
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <box size="${stereocamSize} ${stereocamSize} ${stereocamSize}"/>
                </geometry>
            </collision>
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <box size="${stereocamSize} ${stereocamSize} ${stereocamSize}"/>
                </geometry>
                <material name="red"/>
            </visual>
            <inertial>
                <mass value="${stereocamMass}"/>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <inertia 
                    ixx="1e-6" ixy="0" ixz="0" 
                    iyy="1e-6" iyz="0" 
                    izz="1e-6"/>
            </inertial>
        </link>

        <!-- Joint links -->
        <link name="stereo1_roll_link">
            <visual>
                <geometry>
                    <box size="0.1 0.1 0.1"/>
                </geometry>
                <material name="red"/>
            </visual>
        </link>
        <link name="stereo1_pitch_link">
            <visual>
                <geometry>
                    <box size="0.1 0.1 0.1"/>
                </geometry>
                <material name="green"/>
            </visual>
        </link>
        <link name="stereo1_yaw_link">
            <visual>
                <geometry>
                    <box size="0.1 0.1 0.1"/>
                </geometry>
                <material name="blue"/>
            </visual>
        </link>

        <!-- Joint test joints -->
        <joint name="stereo1_joint_test_anchor" type="fixed">
            <origin xyz="-.03 .20 1.81" rpy="0 0 0"/>
            <parent link="chassis_link"/>
            <child link="stereo1_yaw_link"/>
        </joint>

        <!-- Roll joint -->
        <joint name="stereo1_joint_test_yaw" type="continuous">
            <origin xyz="0 0 0"/>
            <axis xyz="0 0 1"/>
            <parent link="stereo1_yaw_link"/>
            <child link="stereo1_pitch_link"/>
        </joint>

        <!-- Pitch joint -->
        <joint name="stereo1_joint_test_pitch" type="continuous">
            <origin xyz="0 0 0"/>
            <axis xyz="0 1 0"/>
            <parent link="stereo1_pitch_link"/>
            <child link="stereo1_roll_link"/>
        </joint>

        <!-- Yaw joint -->
        <joint name="stereo1_joint_test_roll" type="continuous">
            <origin xyz="0 0 0"/>
            <axis xyz="1 0 0"/>
            <parent link="stereo1_roll_link"/>
            <!-- <child link="stereo1_end_link"/> -->
            <child link="stereo1_link"/>
        </joint>
    </xacro:macro>
</robot>
