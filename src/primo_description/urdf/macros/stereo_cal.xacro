<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!-- parameters -->
    <xacro:property name="seecamSize" value="0.05"/>
    <xacro:property name="seecamMass" value="0.1"/>
    <xacro:property name="stereocamSize" value="0.05"/>
    <xacro:property name="stereocamMass" value="0.1"/>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>
    <material name="green">
        <color rgba="0 1 0 1"/>
    </material>
    <material name="blue">
        <color rgba="0 0 1 1"/>
    </material>
    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <!-- Cal link macro -->
    <xacro:macro name="m_cal_link" params="name color">
        <link name="stereo${num}_${name}_link">
            <visual>
                <geometry>
                    <box size="0.1 0.1 0.1"/>
                </geometry>
                <material name="${color}"/>
            </visual>
        </link>
    </xacro:macro>

    <!-- stereo${num} joint test macro -->
    <xacro:macro name="m_stereo_cal" params="num">

        <!-- Stereo cam link -->
        <link name="stereo${num}_link">
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <box size="${stereocamSize} ${stereocamSize} ${stereocamSize}"/>
                </geometry>
            </collision>
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <box size="${stereocamSize} ${stereocamSize} ${stereocamSize}"/>
                </geometry>
                <material name="red"/>
            </visual>
            <inertial>
                <mass value="${stereocamMass}"/>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <inertia 
                    ixx="1e-6" ixy="0" ixz="0" 
                    iyy="1e-6" iyz="0" 
                    izz="1e-6"/>
            </inertial>
        </link>

        <!-- Joint links -->

        <xacro:m_cal_link name="x" color="red"/>
        <xacro:m_cal_link name="y" color="green"/>
        <xacro:m_cal_link name="z" color="blue"/>
        <xacro:m_cal_link name="roll" color="red"/>
        <xacro:m_cal_link name="pitch" color="green"/>
        <xacro:m_cal_link name="yaw" color="blue"/>

        <!-- Joint test joints -->
        <joint name="stereo${num}_cal_x_joint" type="continuous">
            <axis xyz="1 0 0"/>
            <parent link="chassis_link"/>
            <child link="stereo${num}_x_link"/>
        </joint>

        <joint name="stereo${num}_cal_y_joint" type="continuous">
            <axis xyz="0 1 0"/>
            <parent link="stereo${num}_x_link"/>
            <child link="stereo${num}_y_link"/>
        </joint>

        <joint name="stereo${num}_cal_z_joint" type="continuous">
            <axis xyz="0 0 1"/>
            <parent link="stereo${num}_y_link"/>
            <child link="stereo${num}_z_link"/>
        </joint>


        <!-- Roll joint -->
        <joint name="stereo${num}_cal_yaw_joint" type="continuous">
            <origin xyz="0 0 0"/>
            <axis xyz="0 0 1"/>
            <parent link="stereo${num}_z_link"/>
            <child link="stereo${num}_yaw_link"/>
        </joint>

        <!-- Pitch joint -->
        <joint name="stereo${num}_cal_pitch_joint" type="continuous">
            <origin xyz="0 0 0"/>
            <axis xyz="0 1 0"/>
            <parent link="stereo${num}_yaw_link"/>
            <child link="stereo${num}_pitch_link"/>
        </joint>

        <!-- Yaw joint -->
        <joint name="stereo${num}_cal_roll_joint" type="continuous">
            <origin xyz="0 0 0"/>
            <axis xyz="1 0 0"/>
            <parent link="stereo${num}_pitch_link"/>
            <child link="stereo${num}_roll_link"/>
        </joint>

        <!-- Final connection -->
        <joint name="stereo${num}_cal_con_joint" type="fixed">
            <origin xyz="0 0 0"/>
            <parent link="stereo${num}_roll_link"/>
            <child link="stereo${num}_link"/>
        </joint>

        <!-- The corrected link for gazebo -->
        <link name="stereo${num}_corrected_link">
            <inertial>
                <mass value="0"/>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <inertia 
                    ixx="1e-6" ixy="0" ixz="0" 
                    iyy="1e-6" iyz="0" 
                    izz="1e-6"/>
            </inertial>
        </link>

        <joint name="stereo${num}_corrected_joint" type="fixed">
            <origin xyz="0 0 0" rpy="1.57079632679 -1.5707963267 0"/>
            <parent link="stereo${num}_link"/>
            <child link="stereo${num}_corrected_link"/>
        </joint>

    </xacro:macro>
</robot>
