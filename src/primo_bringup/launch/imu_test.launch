<?xml version="1.0"?>
<launch>

    <include file="$(find primo_base)/launch/joy_twist.launch"/>

    <include file="$(find primo_base)/launch/vel_smooth.launch"/>
    <node pkg="sabertooth_simple" type="sabertooth_simple" name="sabertooth"/>
    <include file="$(find primo_base)/launch/power_sensor.launch"/>

    <include file="$(find primo_description)/launch/primo_urdf_sim.launch"/>
    <include file="$(find primo_gazebo)/launch/primo_gazebo.launch"/>

    <node pkg="memsense_uimu" type="uimu" name="uimu"/>

    <node pkg="rviz" type="rviz" name="rviz" 
        args="-d $(find primo_bringup)/config/imu_test.rviz"/>

    <node if="false" pkg="imu_complementary_filter" type="complementary_filter_node" name="imu_filter"> 
        <remap from="imu/data_raw" to="imu"/>
        <remap from="imu/mag" to="mag"/>

        <param name="use_mag"       value="true"/>
        <param name="publish_tf"    value="true"/>
        <param name="fixed_frame"   value="odom"/>
    </node>

    <node pkg="imu_filter_madgwick" type="imu_filter_node" name="imu_filter_madwick">
        <remap from="imu/data_raw" to="imu"/>
        <remap from="imu/mag" to="mag"/>

        <param name="use_mag"       value="true"/>
        <param name="publish_tf"    value="true"/>
        <param name="fixed_frame"   value="odom"/>
    </node>
</launch>
