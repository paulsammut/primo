<?xml version="1.0"?>
<launch>
    <!-- ground segmenter -->
    <group ns="/stereo0" >
    <node pkg="nodelet" type="nodelet" name="stereo_nodelet"  args="manager"/>  
      <!-- Create point cloud for the local planner -->
      <node pkg="nodelet" type="nodelet" name="obstacles_detection" args="load rtabmap_ros/obstacles_detection stereo_nodelet" output="screen">
         <remap from="cloud" to="/stereo0/points2"/>
         <remap from="obstacles" to="/planner_cloud"/>

         <param name="frame_id" type="string" value="base_link"/>
         <param name="map_frame_id" type="string" value="map"/>
         <param name="normal_estimation_radius" type="double" value="0.1"/>
         <param name="Grid/MinClusterSize" type="int" value="200"/>
         <param name="Grid/MaxObstacleHeight" type="double" value="0.0"/>
       </node>
    </group>
</launch>
